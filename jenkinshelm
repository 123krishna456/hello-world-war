pipeline {
    agent {label 'jenkinmaster'}
    stages {
        stage('Build') {
            steps {
                sh 'docker build -t tomcat_build:${BUILD_VERSION} .'
                sh 'helm package ./helm/tomcat --version=${BUILD_VERSION}'
            }
        }  
        stage('Publish') {
            steps {
                sh "echo ${BUILD_NUMBER}"
                withCredentials([usernamePassword(credentialsId: 'dockerHub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]){
                    sh "docker login -u ${env.dockerHubUSER} -p ${env.dockerHubPassword}"
                sh 'docker tag tomcat_build:${BUILD_VERSION} krishna123456/tomcat:${BUILD_VERSION}'
                sh 'docker push krishna123456/tomcat:${BUILD_VERSION}'
                    
                sh 'curl -ukittu16000@gmail.com:nkKrishna@123 -T helm-local-${BUILD_VERSION}.tgz https://krishnank.jfrog.io/artifactory/helm-local/${BUILD_VERSION}.tgz'
                }
            }
        } 
        stage( 'Deploy' ) {
        agent {label 'k8smaster'} 
            steps {
               sh 'helm repo add helm https://krishnank.jfrog.io/artifactory/api/helm/helm --username kittu16000@gmail.com --password nkKrishna@123'
               sh 'helm repo update'
               sh 'helm repo list'
               sh 'helm upgrade --install mytomcat helm/tomcat --version=${BUILD_VERSION} --set selector_matchlabels=tomcat --set deployment_name=tomcat --set replicas=2 --set registry_name=ebenneelpinto --set docker_repo_name=tomcat --set image_tag=${BUILD_VERSION} --set port_name=tomcat --set target_port=8080 --set port=8080 --set favorite.drink=coffee --set favorite.food=pizza'
            }
        }    
    } 
}
