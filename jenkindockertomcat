pipeline {
  agent { label 'ansiblehost' }
  stages {
    stage ('buildwar') {
      steps {
        sh 'docker build -t tomcatbuild:${BUILD_VERSION} -f mytomcatDockerfile .'
      }
    }
    stage ('publishwar') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerhubPassword', usernameVariable: 'dockerhubUsername')]) {
        sh "docker login -u ${env.dockerhubUsername} -p ${env.dockerhubPassword}"
        sh "docker tag tomcatbuild:${BUILD_VERSION} ${env.dockerhubUsername}/tomcat:${BUILD_VERSION}"
        sh "docker push ${env.dockerhubUsername}/tomcat:${BUILD_VERSION}"
        }
      }
    }
    stage ('deploywar') {
    agent { label 'docker2' }
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerhubPassword', usernameVariable: 'dockerhubUsername')]) {
        sh "docker pull  ${env.dockerhubUsername}/tomcat:${BUILD_VERSION}"
        sh "docker image rm -f  ${env.dockerhubUsername}/tomcat:${BUILD_VERSION}"
        sh "docker run -d -p 8888:8080 --name tomcatapache_${BUILD_VERSION}  ${env.dockerhubUsername}/tomcat:${BUILD_VERSION}"
        }
      }
    }
  }
}
