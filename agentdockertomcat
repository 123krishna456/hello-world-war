pipeline {
  agent {
      docker {
        image 'maven:3.8.2-openjdk-8'
      }
  }
  stages {
    stage ('buildwar') {
      steps {
        sh 'rm -rf *'
        sh 'git clone https://github.com/123krishna456/hello-world-war.git'
        sh 'sudo chmod -R 777 /var/run/docker.sock'
        dir ('hello-world-war') {
          sh 'mvn clean install'
          }
      }
    }
  }
}
